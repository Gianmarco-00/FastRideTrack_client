<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:controller="org.ispw.fastridetrack.controller.GUIController.SignUpGUIController"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="720.0" prefWidth="1280.0">
   <children>
      <!-- Immagine di sfondo: deve essere PRIMA nel children, cosÃ¬ gli altri nodi stanno SOPRA -->
      <ImageView fitHeight="720.0" fitWidth="1280.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0">
         <image>
            <!-- Assicurati che il file sia nel path corretto -->
            <Image url="@../images/SignUp.jpg"/>
         </image>
      </ImageView>

      <!-- Bottone Homepage -->
      <Button fx:id="homepageButton" layoutX="82.0" layoutY="134.0" mnemonicParsing="false"
              prefHeight="25.0" prefWidth="131.0" style="-fx-background-color: transparent;"
              onAction="#onHomepage"/>

      <!-- Campo Nome -->
      <TextField fx:id="firstNameField" layoutX="335.0" layoutY="307.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;"/>

      <!-- Campo Cognome -->
      <TextField fx:id="lastNameField" layoutX="335.0" layoutY="354.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;"/>

      <!-- Campo Username -->
      <TextField fx:id="usernameField" layoutX="693.0" layoutY="307.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;"/>

      <!-- Campo Password -->
      <TextField fx:id="passwordField" layoutX="693.0" layoutY="354.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;"/>

      <!-- Campo Numero di Telefono -->
      <TextField fx:id="phoneNumberField" layoutX="693.0" layoutY="400.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;"/>

      <!-- Campo Email -->
      <TextField fx:id="emailField" layoutX="571.0" layoutY="450.0" prefHeight="25.0"
                 prefWidth="205.0" style="-fx-background-color: transparent;"/>

      <!-- ChoiceBox: solo "Client" -->
      <ChoiceBox fx:id="userTypeChoiceBox" layoutX="335.0" layoutY="400.0" prefHeight="25.0"
                 prefWidth="257.0" style="-fx-background-color: transparent;"/>

      <!-- Bottone Sign Up -->
      <Button fx:id="signUpButton" layoutX="519.0" layoutY="524.0" mnemonicParsing="false"
              prefHeight="25.0" prefWidth="257.0" style="-fx-background-color: transparent;"
              onAction="#onSignUp"/>
   </children>
</AnchorPane>
