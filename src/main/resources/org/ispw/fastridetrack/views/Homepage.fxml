<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:controller="org.ispw.fastridetrack.controller.guicontroller.HomepageGUIController"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="720.0" prefWidth="1280.0">

   <children>
      <ImageView fx:id="imageView" fitHeight="720.0" fitWidth="1280.0"/>
      <!-- Bottone Sign In -->
      <Button fx:id="signInButton"
              layoutX="567.0" layoutY="285.0"
              prefHeight="68.0" prefWidth="203.0"
              onAction="#onSignInClick"
              style="-fx-background-radius: 30; -fx-background-color: transparent;" />

      <!-- Bottone Sign Up -->
      <Button fx:id="signUpButton"
              layoutX="567.0" layoutY="418.0"
              prefHeight="68.0" prefWidth="203.0"
              onAction="#onSignUpClick"
              style="-fx-background-radius: 30; -fx-background-color: transparent;" />

   </children>
</AnchorPane>

